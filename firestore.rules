
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getRequestingUser() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isSuperAdmin() {
      return isSignedIn() && getRequestingUser().data.role == 'SUPER_ADMIN';
    }
    
    function isHeadSales() {
        return isSignedIn() && getRequestingUser().data.role == 'HEAD_SALES';
    }

    function isSales() {
        return isSignedIn() && getRequestingUser().data.role == 'SALES';
    }

    function userTeamId() {
        return getRequestingUser().data.teamId;
    }

    // --- Core Collections ---
    match /users/{userId} {
      // Users can read their own profile. Super Admins can read anyone's profile.
      // The SUPER_ADMIN check is inlined to prevent recursion.
      allow get: if isSignedIn() && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'SUPER_ADMIN');
      
      // Allow any signed-in user to see a list of other users (e.g., for assigning tasks).
      allow list: if isSignedIn();
      
      // Only Super Admins can create/update/delete users.
      allow write: if isSuperAdmin();
    }

    match /teams/{teamId} {
      // Any signed-in user can read team data.
      allow read: if isSignedIn();
      // Only Super Admins can create/update teams.
      allow write: if isSuperAdmin();
    }

    // --- Settings & System Collections ---
    match /settings/{docId} {
      allow read, write: if isSuperAdmin();
    }

    match /integrations/settings {
      allow read, write: if isSuperAdmin();
    }

    match /integrations_secrets/{docId} {
      allow read, write: if false;
    }

    match /audit_logs/{logId} {
      allow read: if isSuperAdmin();
      allow write: if false;
    }

    // --- CRM Data Collections ---
    match /contacts/{contactId} {
        allow read: if isSignedIn() && (
            isSuperAdmin() ||
            (isHeadSales() && resource.data.teamId == userTeamId()) ||
            (isSales() && resource.data.teamId == userTeamId()) // Sales can see contacts within their team
        );
        allow write: if isSignedIn() && (
            isSuperAdmin() ||
            (request.resource.data.teamId == userTeamId())
        );
    }
    
    match /leads/{leadId} {
        allow get: if isSignedIn() && (
            isSuperAdmin() ||
            (isHeadSales() && resource.data.teamId == userTeamId()) ||
            (isSales() && resource.data.ownerUid == request.auth.uid)
        );
        allow list: if isSignedIn();
        allow write: if isSignedIn() && (
            isSuperAdmin() ||
            (request.resource.data.teamId == userTeamId())
        );
    }

    match /deals/{dealId} {
        allow read: if isSignedIn() && (
            isSuperAdmin() ||
            (isHeadSales() && resource.data.teamId == userTeamId()) ||
            (isSales() && resource.data.ownerUid == request.auth.uid)
        );
        allow write: if isSignedIn() && (
            isSuperAdmin() ||
            (request.resource.data.teamId == userTeamId())
        );
    }

    match /activities/{activityId} {
      allow write: if false; // Server-side writes only
      allow read: if isSignedIn() && (
        isSuperAdmin() ||
        (isHeadSales() && resource.data.teamId == userTeamId()) ||
        (isSales() && get(/databases/$(database)/documents/leads/$(resource.data.leadId)).data.ownerUid == request.auth.uid)
      );
    }
  }
}
